<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/AppTheme">
        <item name="android:background">@drawable/action_bar_bg</item>
        <item name="android:backgroundStacked">@color/app_bright_green</item>
        <item name="android:backgroundSplit">@color/app_bright_green</item>

        <item name="background">@drawable/action_bar_bg</item>
        <item name="backgroundStacked">@color/app_bright_green</item>
        <item name="backgroundSplit">@color/app_bright_green</item>
    </style>

</resources>
